<%# use bootstrap @4 alert format %>
<% flash.each do |name,msg| %>
    <%# if name == 'notice', then alert-success color, otherwise, danger color %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
        <%# show the notice msg to users %>
        <strong> <%= msg %> </strong> 
         <%# if current_user is true, then display welcome back %>
        <% if current_user %>
           <span class="font-italic"> Welcome Back! </span>
        <% end %>
        
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% end %>